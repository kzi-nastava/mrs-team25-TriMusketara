<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/nav_bg">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/whiteish"
        android:alpha="0.4"
        android:layout_marginBottom="16dp"/>

    <!-- Map preview -->
    <ImageView
        android:id="@+id/map_preview"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_placeholder"
        android:clipToOutline="true"
        android:layout_marginBottom="16dp"/>

    <!-- Route title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location_pin"
            app:tint="@color/whiteish"/>

        <TextView
            android:id="@+id/route_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Airport - City Center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/whiteish"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="12dp"
        android:background="@color/whiteish"
        android:alpha="0.2"/>

    <!-- Will have another divider here, and a part for additional stops if a route has them -->

    <!-- Info row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Distance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location_arrow"
                app:tint="@color/whiteish"/>

            <TextView
                android:id="@+id/route_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="12 km"
                android:textColor="@color/whiteish"/>
        </LinearLayout>

        <!-- Duration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/clock"
                app:tint="@color/whiteish"/>

            <TextView
                android:id="@+id/route_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="25 min"
                android:textColor="@color/whiteish"/>
        </LinearLayout>

        <!-- Times used -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/routes_num"
                app:tint="@color/whiteish"/>

            <TextView
                android:id="@+id/route_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="5x"
                android:textColor="@color/whiteish"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Order button -->
    <Button
        android:id="@+id/btn_order_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Order again"
        style="@style/PrimaryButton"/>
</LinearLayout>