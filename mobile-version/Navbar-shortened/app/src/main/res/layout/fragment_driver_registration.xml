<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DriverRegistrationFragment"
    android:background="@color/home_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver registration"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/profile_bg"
            android:layout_marginBottom="18dp"/>

        <!-- Driver info card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/nav_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver information"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Name -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Last name -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_lname_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_email_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_address_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Vehicle Type Spinner -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="Gender"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Spinner
                        android:id="@+id/spinner_gender"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:backgroundTint="@color/whiteish"/>
                </LinearLayout>

                <!-- Phone -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/driver_phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_next"
                    style="@style/PrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vehicle info card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/nav_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle information"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Model -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vehicle_model_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Model"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Vehicle Type Spinner -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="Vehicle Type"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Spinner
                        android:id="@+id/spinner_vehicle_type"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:backgroundTint="@color/whiteish"/>
                </LinearLayout>

                <!-- Plate number -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vehicle_plate_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Plate number"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Number of seats -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/text_input_box_stroke"
                    app:boxStrokeWidth="2dp"
                    android:textColorHint="@color/white"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vehicle_seats_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Num. of seats"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Baby Friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:text="Baby Friendly"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_baby_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <!-- Pet Friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Pet Friendly"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_pet_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_back"
                        style="@style/PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Back" />

                    <Button
                        android:id="@+id/btn_submit"
                        style="@style/PrimaryButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Submit" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>