<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/nav_bg"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/container_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_guest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/nav_bg"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Text before log in button -->
            <TextView
                android:id="@+id/guest_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="It appears that you are not logged in"
                android:textSize="18sp"
                android:paddingBottom="16dp"/>

            <!-- Login button -->
            <Button
                style="@style/PrimaryButton"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"/>

            <!-- Text before registration button -->
            <TextView
                android:id="@+id/guest_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="In case you don't have an account feel free to create one"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>

            <!-- Register button -->
            <Button
                style="@style/PrimaryButton"
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Registered user part -->
        <!-- - - - - - - - - - - -->

        <!-- "My Account" card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_my_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/nav_bg"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <!-- Card title "My Account" -->
                <TextView
                    android:id="@+id/account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Account"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>


                <!-- Profile picture -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/no_profile_picture"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    />

                <!-- Name lastname -->
                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Change information button -->
                <Button
                    style="@style/PrimaryButton"
                    android:id="@+id/btn_change_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textStyle="normal"
                    android:padding="12dp"
                    android:text="Change information"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"/>

                <!-- Delete account button -->
                <Button
                    style="@style/PrimaryButton"
                    android:id="@+id/btn_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:gravity="start"
                    android:padding="12dp"
                    android:text="Delete account"
                    android:textSize="18sp"
                    android:textColor="@color/redish"
                    android:textAllCaps="false"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- "ClickAndDrive" card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/nav_bg"
            android:layout_marginBottom="16dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Card title "ClickAndDrive" -->
                <TextView
                    android:id="@+id/application_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ClickAndDrive"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/container_application_buttons"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>











    </LinearLayout>
</ScrollView>