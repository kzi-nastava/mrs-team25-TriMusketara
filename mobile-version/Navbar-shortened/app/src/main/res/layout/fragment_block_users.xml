<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/home_bg"
    tools:context=".BlockUsersFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blocking a user"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/profile_bg"
        android:layout_marginTop="16dp"/>

    <!-- Search bar -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Search users"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/hint_color"
        android:backgroundTint="@color/whiteish"/>

    <!-- Toggle buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_drivers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drivers"
            android:textColor="@color/whiteish"
            android:backgroundTint="@color/profile_bg"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <Button
            android:id="@+id/btn_passengers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Passengers"
            android:textColor="@color/whiteish"
            android:backgroundTint="@color/profile_bg"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonOutlinedStyle"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/users_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

</LinearLayout>