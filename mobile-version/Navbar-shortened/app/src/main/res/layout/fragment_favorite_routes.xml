<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FavoriteRoutesFragment"
    android:background="@color/home_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Favorite routes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/profile_bg"
        android:layout_marginTop="16dp"/>

    <!-- Search ... filter -->
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Search favorite routes"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/whiteish"
        android:backgroundTint="@color/whiteish"/>

    <!-- List of favorite routes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_routes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"/>

</LinearLayout>