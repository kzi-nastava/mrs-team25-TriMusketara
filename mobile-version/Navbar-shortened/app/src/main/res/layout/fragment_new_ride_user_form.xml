<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".NewRideUserFormFragment">

    <LinearLayout
        android:id="@+id/container_new_ride"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/nav_bg"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/home_bg"
            app:strokeColor="@color/profile_bg"
            app:strokeWidth="2dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule a Ride"
                    android:textSize="24sp"
                    android:textColor="@color/whiteish"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Origin -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Origin"
                    app:hintTextColor="@color/hint_color"
                    app:boxStrokeColor="@color/whiteish"
                    android:textColorHint="@color/whiteish"
                    android:layout_marginBottom="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_origin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/user_input"
                        android:textColorHint="@color/hint_color"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Destination -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination"
                    app:hintTextColor="@color/hint_color"
                    app:boxStrokeColor="@color/whiteish"
                    android:textColorHint="@color/whiteish"
                    android:layout_marginBottom="16dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/user_input"
                        android:textColorHint="@color/hint_color"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Additional stops and Passengers -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_additional_stops"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="+ Add Stops"
                        android:textColor="@color/whiteish"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_linked_passengers"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="+ Passengers"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#40CFDBD5"
                    android:layout_marginBottom="20dp"/>

                <!-- Vehicle Type Spinner -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Vehicle Type"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Spinner
                        android:id="@+id/spinner_vehicle_type"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:backgroundTint="@color/whiteish"/>
                </LinearLayout>

                <!-- Set time -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_time"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Select Time"
                    android:textColor="@color/whiteish"
                    app:strokeColor="@color/whiteish"
                    android:gravity="start|center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Baby Friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Baby Friendly"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_baby_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <!-- Pet Friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="Pet Friendly"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_pet_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1.5"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_schedule_ride"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Show route &amp; ETA"
                    app:cornerRadius="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/profile_bg"
                    android:textColor="@color/nav_bg"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>