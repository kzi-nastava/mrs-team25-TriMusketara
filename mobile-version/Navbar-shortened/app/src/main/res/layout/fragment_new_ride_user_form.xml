<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".NewRideUserFormFragment">

    <LinearLayout
        android:id="@+id/container_new_ride"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/nav_bg"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/home_bg"
            app:strokeColor="@color/profile_bg"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule a Ride"
                    android:textSize="24sp"
                    android:textColor="@color/whiteish"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"/>

                <!-- Origin -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Origin"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/et_origin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_weight="2"
                        android:hint="Enter origin"
                        android:inputType="text"
                        android:textColor="@color/user_input"
                        android:textColorHint="@color/hint_color"
                        android:backgroundTint="@color/whiteish"/>
                </LinearLayout>

                <!-- Origin -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Destination"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <EditText
                        android:id="@+id/et_destination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_weight="2"
                        android:hint="Enter destination"
                        android:inputType="text"
                        android:textColor="@color/user_input"
                        android:textColorHint="@color/hint_color"
                        android:backgroundTint="@color/whiteish"/>
                </LinearLayout>

                <!-- Additional stops -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textSize="16sp"
                        android:text="Additional stops"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Button
                        android:id="@+id/btn_additional_stops"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Add stops"
                        android:textSize="14sp"
                        android:textColor="@color/profile_bg"
                        android:backgroundTint="@color/nav_bg"/>
                </LinearLayout>

                <!-- Linked passengers -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textSize="16sp"
                        android:text="Linked passengers"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Button
                        android:id="@+id/btn_linked_passengers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="Add passengers"
                        android:textSize="14sp"
                        android:textColor="@color/profile_bg"
                        android:backgroundTint="@color/nav_bg"/>
                </LinearLayout>

                <!-- Vehicle type -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Vehicle type"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Spinner
                        android:id="@+id/spinner_vehicle_type"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/whiteish"
                        android:popupBackground="@color/home_bg"/>
                </LinearLayout>

                <!-- Set time -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Set time"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <Button
                        android:id="@+id/btn_set_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Select time"
                        android:textSize="14sp"
                        android:textColor="@color/profile_bg"
                        android:backgroundTint="@color/nav_bg"/>
                </LinearLayout>

                <!-- Baby friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Baby friendly"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_baby_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <!-- Pet friendly Toggle -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:text="Pet friendly"
                        android:textColor="@color/whiteish"
                        android:layout_gravity="center_vertical"/>

                    <ToggleButton
                        android:id="@+id/toggle_pet_friendly"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="2"
                        android:textOn="YES"
                        android:textOff="NO"
                        android:checked="false"
                        android:backgroundTint="@color/nav_bg"
                        android:textColor="@color/whiteish"/>
                </LinearLayout>

                <!-- Submit -->
                <Button
                    android:id="@+id/btn_schedule_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/nav_bg"
                    android:textColor="@color/profile_bg"
                    android:text="Show Route and ETA"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>