<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/nav_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/no_profile_picture"
            android:background="@drawable/circle_background"
            android:padding="8dp"
            app:tint="@color/profile_bg"/>

        <TextView
            android:ud="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Name Lastname"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/whiteish"/>

        <!-- Block button -->
        <Button
            android:id="@+id/btn_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Block"
            android:textColor="@android:color/white"
            android:backgroundTint="#E74C3C"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonStyle"/>

        <!-- Note button -->
        <Button
            android:id="@+id/btn_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textColor="@android:color/white"
            android:backgroundTint="#F39C12"
            android:layout_marginEnd="8dp"
            style="?attr/materialButtonStyle"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>